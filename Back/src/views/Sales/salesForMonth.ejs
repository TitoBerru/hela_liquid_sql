<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/headBootStrap.ejs') %>
        <link rel='stylesheet' href='/stylesheets/recipes.css' />
        <title>Nuve -Ventas Por Mes</title>

</head>

<body>
    <%- include('../partials/header.ejs') %>
        <%- include('../partials/bootstrapScript.ejs') %>
            <section class="mainSectionSales">

                <div class="one">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <h4>
                                <a class="nav-link" href="/Sales/salesForCustomer">Cliente</a>
                            </h4>
                        </li>
                        <li class="nav-item">
                            <h4><a class="nav-link" href="/Sales/salesForMonth">Mes</a></h4>
                        </li>
                        <li class="nav-item">
                            <h4><a class="nav-link" href="/Sales/salesForYear">AÃ±o</a></h4>
                        </li>
                        <li class="nav-item">
                            <h4><a class="nav-link" href="/Sales/salesForRecipe">Receta</a></h4>
                        </li>
                        <li class="nav-item">
                            <h4><a class="nav-link" href="/Sales/salesForFlavor">Aroma</a></h4>
                        </li>
                    </ul>
                </div>
                <div class="two">

                    <section class="Envases view1 col-4">
                        <h4>VENTAS POR MES</h4>
                        <section class="table-primary flush"><a class="nav-link" href="/Sales/salesForCustomer"></a>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="1"><a
                                    class="nav-link" href="/Sales/salesForMonth/1">ENERO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="2"><a
                                    class="nav-link" href="/Sales//salesForMonth/2">FEBRERO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="3"><a
                                    class="nav-link" href="/Sales//salesForMonth/3">MARZO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="4"><a
                                    class="nav-link" href="/Sales//salesForMonth/4">ABRIL</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="5"><a
                                    class="nav-link" href="/Sales//salesForMonth/5">MAYO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="6"><a
                                    class="nav-link" href="/Sales//salesForMonth/6">JUNIO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="7"><a
                                    class="nav-link" href="/Sales//salesForMonth/7">JULIO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="8"><a
                                    class="nav-link" href="/Sales//salesForMonth/8">AGOSTO</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="9"><a
                                    class="nav-link" href="/Sales//salesForMonth/9">SEPTIEMBRE</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="10"><a
                                    class="nav-link" href="/Sales//salesForMonth/10">OCTUBRE</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="11"><a
                                    class="nav-link" href="/Sales//salesForMonth/11">NOVIEMBRE</a></button>
                            <button type="button" class="btn btn-outline-info btn-sm " type="submit" value="12"><a
                                    class="nav-link" href="/Sales//salesForMonth/12">DICIEMBRE</a></button>
                        </section>
                        <br>
                     
                        
                        <table class="table table-dark ">
                            <thead>
                                <tr class="table-primary flush">
                                    <th scope="col" class="bg-primary">Nombre Cliente</th>
                                    <th scope="col" class="bg-primary">Fecha Venta</th>
                                    <th scope="col" class="bg-primary">Receta</th>
                                    <th scope="col" class="bg-primary">Total en $</th>
                                    <th scope="col" class="bg-primary">Ganancia</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i=0; i < ventas.length; i++ ) { %>
                                    <tr>

                                        <th scope="row">
                                            <%= ventas[i].NombreCliente %>
                                           
                                        </th>
                                       
                                        <td>
                                            <%= ventas[i].FechaVenta %> HS
                                        </td>
                                        <td>
                                            <%= ventas[i].NombreReceta %>
                                        </td>
                                        <td>
                                            <%= ventas[i].PrecioVenta %>
                                        </td>
                                        <td>
                                            <%= ventas[i].Ganancia %>
                                        </td>


                                    </tr>
                                    
                                    <% } %>
                                    



                            </tbody>
                          
                        </table>
                        <h3>Ventas Totales MES: <%= ventasTotalMes[0].TotalVentas %> -- Ganancia Total MES: <%= ventasTotalMes[0].TotalGanancias %></h3>
                    </section>
                </div>
                <%- include('../partials/bootstrapScript.ejs') %>
                    <!-- <script src="sweetalert2.all.min.js"></script> -->
            </section>


</body>

</html>